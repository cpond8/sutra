;; path_operations.sutra
;; Test user-facing path operations: set!, get, del!

;; Basic path operations
(set! name "Alice")
(print (get name))

(set! age 25)
(print (get age))

;; Nested path operations
(set! person.name "Bob")
(set! person.age 30)
(print (get person.name))
(print (get person.age))

;; List path operations
(set! items.0 "first")
(set! items.1 "second")
(print (get items.0))
(print (get items.1))

;; Delete operations
(del! age)
(print (get age))

;; Test getting non-existent keys
(print (get nonexistent))
