;; Sutra String Atom Tests
;;
;; This suite validates the behavior of string manipulation atoms.

;;;
;;; 1. Concatenation (str+)
;;;

(test "string: str+ - success"
      (expect (value "hello world") (tags "string"))
      (str+ "hello" " " "world"))

(test "string: str+ - with non-string types"
      (expect (value "number1stringtrue") (tags "string") (timeout 500))
      (str+ "number" 1 "string" true))

(test "string: str+ - identity"
      (expect (value "") (tags "string"))
      (str+))

(test "string: str+ - single argument"
      (expect (value "single") (tags "string") (skip "Demonstration of skip feature for test harness."))
      (str+ "single"))