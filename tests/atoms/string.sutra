;; Sutra String Atom Tests
;;
;; This suite validates the behavior of string manipulation atoms.

;;;
;;; 1. Concatenation (str+)
;;;

(test "string: str+ - success"
      (expect (value "hello world")
              (tags "string"))
      (str+ "hello" " " "world"))  ; "hello" + " " + "world" ? => "hello world"

(test "string: str+ - with non-string types"
      (expect (value "number1stringtrue")
              (tags "string"))
      (str+ "number" 1 "string" true))  ; "number" + 1 + "string" + true ? => "number1stringtrue"

(test "string: str+ - identity"
      (expect (value "")
              (tags "string"))
      (str+))  ; str+ ? => "" (identity)

(test "string: str+ - single argument"
      (expect (value "single")
              (tags "string"))
      (str+ "single"))  ; str+ "single" ? => "single"
