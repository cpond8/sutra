;; Sutra Random Atom Tests
;;
;; This suite validates the behavior of the `rand` atom.

;;;
;;; 1. Random (rand)
;;;

(test "random: rand - success"
      (expect (value true) (tags "random") (timeout 1000))
      ;; We can't test for a specific value, but we can assert it's a number
      ;; within the expected range [0, 1).
      (and (gte? (rand) 0) (lt? (rand) 1)))

(test "random: rand - arity error"
      (expect (error ArityError) (tags "random") (skip "Demonstration of skip feature for test harness."))
      (rand 123))