;; 2. Assignment & State Macros
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

;; inc!: Increment value at path by 1.
;; Arity: 1 (path)
;; Usage: (inc! player.score)
;; Expands to: (core/set! path (+ (get path) 1))
(define (inc! path)
  (list 'core/set! path (list '+ (list 'get path) 1)))

;; dec!: Decrement value at path by 1.
;; Arity: 1 (path)
;; Usage: (dec! player.hp)
;; Expands to: (core/set! path (- (get path) 1))
(define (dec! path)
  (list 'core/set! path (list '- (list 'get path) 1)))

